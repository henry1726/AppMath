<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicios de prÃ¡ctica"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ejercicio1"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/idCheck1"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:text="A)" />

                <CheckBox
                    android:id="@+id/idCheck2"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:text="B)" />

                <CheckBox
                    android:id="@+id/idCheck3"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:text="C)" />

                <CheckBox
                    android:id="@+id/idCheck4"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:text="D)" />

                <Button
                    android:id="@+id/btnCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validar"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ejercicio2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/res1"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:hint="Resultado"
                    android:inputType="numberDecimal"/>

                <Button
                    android:id="@+id/btnRes1"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="Validar" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ejercicio3" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/res2"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:hint="Resultado"
                    android:inputType="text"/>

                <Button
                    android:id="@+id/btnRes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validar"
                    android:layout_marginLeft="60dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ejercicio4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/res3"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:hint="Resultado"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnRes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validar"
                    android:layout_marginLeft="60dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Terminar"/>

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Reiniciar" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>